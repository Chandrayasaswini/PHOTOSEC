pipeline {
    agent any
    
    stages {
        stage('Fetch Code') {
            steps {
                git credentialsId: 'YashuGit', branch: 'main', url: 'https://github.com/Chandrayasaswini/PHOTOSEC.git'
            }
        }
        stage('Code Analysis') {
            environment {
                scannerHome = tool 'Sonar'
            }
            steps {
                script {
                    withSonarQubeEnv('SonarQube') {
                        sh "${scannerHome}/bin/sonar-scanner " +
                           "-Dsonar.projectKey=MNP_Tech " +
                           "-Dsonar.projectName=MNP_Tech " +
                           "-Dsonar.projectVersion=1.0 " +
                           "-Dsonar.sources=."
                    }
                }
            }
        }
    }
}
